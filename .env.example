# MATT Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
# Note: If your password contains special characters like @, encode them:
# @ = %40, # = %23, $ = %24, etc.
DATABASE_URL=postgresql://postgres:post%40123@localhost:5432/postgres

# AI Services
ANTHROPIC_API_KEY=sk-ant-api03-xxxxx

# Session Security
SESSION_SECRET=your-secret-change-this-in-production

# Application Settings
NODE_ENV=development
PORT=5000

# Configuration Path (optional)
CONFIG_PATH=./config/settings.json

# File Upload Settings
UPLOAD_DIR=uploads
MAX_FILE_SIZE=50MB

# Optional Integrations (leave empty if not used)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
JIRA_API_TOKEN=
GITHUB_TOKEN=

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# Logging
LOG_LEVEL=info
LOG_FILE=
