# MATT (Mars Automated Testing Tool) - Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration (REQUIRED)
DATABASE_URL=postgresql://username:password@host:5432/database_name

# AI Services (REQUIRED)
ANTHROPIC_API_KEY=sk-ant-xxxxx

# Application Configuration
NODE_ENV=production
PORT=5000

# Session Security (REQUIRED for production)
SESSION_SECRET=your-super-secret-session-key-here-change-this-to-random-string

# Optional Integrations
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
JIRA_API_TOKEN=your-jira-api-token
GITHUB_TOKEN=your-github-token

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=50MB

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/matt.log